<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/singup"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="280dp"
            android:padding="20dp">

            <EditText
                android:id="@+id/editUsernameReg"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:background="@drawable/edittext_lavender_border"
                android:layout_marginTop="30dp"
                android:padding="8dp"
                android:hint="Username"
                android:inputType="textPersonName"
                android:drawableStart="@drawable/user_svgrepo_com__1_"
                android:drawablePadding="8dp"/>

            <EditText
                android:id="@+id/editEmailAddReg"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:background="@drawable/edittext_lavender_border"
                android:layout_marginTop="30dp"
                android:padding="8dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:drawableStart="@drawable/email_svgrepo_com"
                android:drawablePadding="8dp"/>

            <EditText
                android:id="@+id/editPasswordReg"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:background="@drawable/edittext_lavender_border"
                android:layout_marginTop="30dp"
                android:padding="8dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:drawableStart="@drawable/password_svgrepo_com"
                android:drawablePadding="8dp"/>

            <EditText
                android:id="@+id/editConfirmPassReg"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:background="@drawable/edittext_lavender_border"
                android:layout_marginTop="30dp"
                android:padding="8dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:drawableStart="@drawable/closed_lock_password_svgrepo_com"
                android:drawablePadding="8dp"/>
            
            <Button
                android:id="@+id/btnRegisterReg"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_signup"
                android:text="Sign up"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginTop="30dp" />

            <TextView
                android:id="@+id/clickableRedirectLoginReg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already an user? Login"
                android:layout_gravity="center"
                android:padding="8dp"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:textColor="@color/lavender"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>