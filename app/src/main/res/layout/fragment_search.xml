<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:orientation="vertical"
    tools:context=".SearchFragment">

    <TextView
        android:id="@+id/txtInternetOffSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Internet is off"
        android:textSize="20sp"
        android:textColor="#ff0000"
        android:visibility="gone"
        android:layout_gravity="center"
        android:padding="10dp"/>

    <Button
        android:id="@+id/btnRefreshSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"/>


    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchViewSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:queryHint="Search places..."
        app:iconifiedByDefault="false" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollContainerSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/horizontalScrollContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <Button
                android:id="@+id/btnFunSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fun"/>

            <Button
                android:id="@+id/btnTempleSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temple"/>

            <Button
                android:id="@+id/btnFamilySearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Family"/>

            <Button
                android:id="@+id/btnCoupleSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Couple"/>

            <Button
                android:id="@+id/btnBeachSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beach"/>

            <Button
                android:id="@+id/btnMonumentSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monument"/>

            <Button
                android:id="@+id/btnCavesSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caves"/>

            <Button
                android:id="@+id/btnFortSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fort"/>

            <Button
                android:id="@+id/btnMuseumsSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Museums"/>

            <Button
                android:id="@+id/btnFreeSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free"/>

        </LinearLayout>

    </HorizontalScrollView>

    <!-- TODO: Update blank fragment layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>